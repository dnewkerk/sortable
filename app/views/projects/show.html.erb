<h1><%= @project.name %></h1>

<% if @project.todos %>
  
  <h2>Project Todos</h2>

  <div class="row">
    <div class="col-md-6">
      <ul class="list-group">
      <% @project.todos.each do |todo| %>
        <li class="list-group-item"><%= todo.name %></li>
      <% end %>
      </ul>
    </div>
  </div>
<% end %>

<%= link_to 'Edit', edit_project_path(@project) %> |
<%= link_to 'Back', projects_path %>
